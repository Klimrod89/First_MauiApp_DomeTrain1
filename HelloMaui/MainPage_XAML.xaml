<?xml version="1.0" encoding="utf-8" ?>
<helloMaui:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helloMaui="clr-namespace:HelloMaui"
             x:Class="HelloMaui.MainPage_XAML"
             Title="MainPage_XAML"
             BackgroundColor="DarkViolet">
   
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <Grid 
                RowDefinitions="*, 100, 40, 500" 
                ColumnDefinitions="*, *, *" 
                RowSpacing="12" 
                ColumnSpacing="12" 
                BackgroundColor="LightSteelBlue"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Padding="12"
                Margin="0, 6, 0, 0">
                <Image 
                    HeightRequest="250" 
                    WidthRequest="500" 
                    Source="dotnet_bot.png" 
                    Aspect="AspectFit" 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="3"/>
                <Label 
                    BackgroundColor="Green" 
                    Text="Hello Maui" 
                    HeightRequest="90" 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" 
                    HorizontalTextAlignment="Center" 
                    VerticalTextAlignment="Center" 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="3"/>
                <Entry
                    Placeholder="First Entry"
                    PlaceholderColor="DarkGray"
                    Grid.Row="2"
                    Grid.Column="0"/>
                <Entry
                    Placeholder="Second Entry"
                    PlaceholderColor="DarkGray"
                    Grid.Row="2"
                    Grid.Column="1"/>
                <Entry
                    Placeholder="Third Entry"
                    PlaceholderColor="DarkGray"
                    Grid.Row="2"
                    Grid.Column="2"/>
                <Label
                    Text="LARGE TEXT"
                    FontSize="100"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"/>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</helloMaui:BaseContentPage>